<odoo>
	<data>
		<record id='mail_channel_inherit_views' model='ir.ui.view'>
			<field name='name'>mail.channel.inherit.views</field>
			<field name='model'>mail.channel</field>
			<field name='inherit_id' ref='mail.mail_channel_view_form'/>
			<field name='arch' type='xml'>
				<xpath expr="//notebook" position='inside'>
					<page string='Lock Edit Message'>
						<group>
							<field name='message_edit_lock' widget='boolean_toggle'/>
						</group>
					</page>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
