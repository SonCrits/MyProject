<odoo>
	<record id='act_crossovered_budget_line_fsm_view' model='ir.actions.act_window'>
		<field name='name'>Budget</field>
		<field name='res_model'>crossovered.budget.line</field>
		<field name='view_mode'>tree</field>
		<!-- <field name='domain'>[('project_id', '=', active_id)]</field> -->
	</record>

	<record id='edit_project' model='ir.ui.view'>
		<field name='name'>project.project.form</field>
		<field name='model'>project.project</field>
		<field name='inherit_id' ref='project.edit_project'/>
		<field name='arch' type='xml'>
			<xpath expr="//div[@name='button_box']" position='inside'>
				<button 
					class="oe_stat_button" 
					icon="fa-money" 
					name="%(act_crossovered_budget_line_fsm_view)d"
					type='action'
				>
  					<span class="o_stat_text">  						
        				<field name='budget_count'/>
         			</span>
         			<span class="o_stat_text">
            			Budget
                   	</span>
				</button>
			</xpath>
			<xpath expr="//div[@name='button_box']" position='inside'>
				<button class="oe_stat_button" icon="fa-adjust">
  					<span class="o_stat_text">  						
        				<field name='contract_count'/>
         			</span>
         			<span class="o_stat_text">
            			Contract
                   	</span>
				</button>
			</xpath>
		</field>
	</record>
	
	
    <menuitem id="field_service_manager_menu_root" name="Field Service">
        <menuitem id="field_service_configuration_menu" name="Configuration" sequence="50">
            <menuitem id="field_service_project_menu" action="project.open_view_project_all_config" sequence="20"/>
        </menuitem>
    </menuitem>
</odoo>
